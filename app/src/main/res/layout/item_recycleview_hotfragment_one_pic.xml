<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="120dp">
<LinearLayout
    android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/title_textview_item_recycleview_hot_onepic"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titledadadadadadadadad"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:id="@+id/author_textview_item_recycleview_hot_onepic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="author"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="bottom"/>
        <TextView
            android:id="@+id/time_textview_item_recycleview_hot_onepic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:layout_marginLeft="30dp"
            android:layout_gravity="bottom"/>

    </LinearLayout>

</LinearLayout>

    <ImageView
        android:id="@+id/image_item_recycleview_hot_onepic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_load_error"
        android:layout_marginTop="10dp"

        />

</LinearLayout>