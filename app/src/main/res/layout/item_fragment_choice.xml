<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/item_choice_imageview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_launcher"/>
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/item_choice_tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UserName"
                android:textColor="#00ffff"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/item_choice_tv_usertime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UserTime"
                android:textColor="@color/colorGray"/>


        </LinearLayout>
        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/item_choice_tv_kinds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UserKinds"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorGray"/>

    </LinearLayout>
    <TextView
        android:id="@+id/item_choice_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:text="UserContent"/>
    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/item_choice_iv_url"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_post_list_hot"/>
            <TextView
                android:layout_marginLeft="8dp"
                android:id="@+id/item_choice_tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="comment"/>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_post_list_reply"/>
            <TextView
                android:layout_marginLeft="8dp"
                android:id="@+id/item_choice_tv_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hot"/>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_post_list_like_normal"/>
            <TextView
                android:layout_marginLeft="8dp"
                android:id="@+id/item_choice_tv_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="like"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>