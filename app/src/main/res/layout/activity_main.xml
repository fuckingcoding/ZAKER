<?xml version="1.0" encoding="utf-8"?>
<mdzz.com.first_of_mdzz.widget.PagerEnabledSlidingPaneLayout

    android:id="@+id/slidingpanelayout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/musicplayer_bkg"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout

        android:id="@+id/layout_covered"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/linearLayout_covered_centre"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageview_main_centre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_tab_my_gray"
                android:layout_gravity="center"/>
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="个人中心"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M"
                android:textSize="40sp"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:layout_marginLeft="60dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout_covered_share"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageview_main_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/covered_share"
                android:layout_gravity="center"/>
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:text="分享"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D"
                android:textSize="40sp"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:layout_marginLeft="80dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout_covered_login"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageview_main_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/covered_login"/>
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:text="登录"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Z"
                android:textSize="40sp"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:layout_marginLeft="80dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout_covered_back"
            android:layout_width="match_parent"
            android:layout_height="150dp"

            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imagevie_main_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/covered_back"/>
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:text="退出"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Z"
                android:textSize="40sp"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:layout_marginLeft="80dp"/>
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/layout_slider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">


        <mdzz.com.first_of_mdzz.widget.NoScrollViewPager
            android:id="@+id/viewPager_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </mdzz.com.first_of_mdzz.widget.NoScrollViewPager>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/devider_line" >
        </View>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:padding="10dp" >

            <RadioButton
                android:id="@+id/btn_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawablePadding="3dp"
                android:drawableTop="@mipmap/ic_tab_news_red"
                android:gravity="center_horizontal"
                android:text="资讯"
                android:textColor="@color/red" />

            <RadioButton
                android:id="@+id/btn_classify"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawablePadding="3dp"
                android:drawableTop="@mipmap/ic_tab_home_red"
                android:gravity="center_horizontal"
                android:text="社区"
                android:textColor="@color/red" />

            <RadioButton
                android:id="@+id/btn_discover"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawablePadding="3dp"
                android:drawableTop="@mipmap/ic_tab_fun_red"
                android:gravity="center_horizontal"
                android:text="玩乐"
                android:textColor="@color/red" />

            <RadioButton
                android:id="@+id/btn_me"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawablePadding="3dp"
                android:drawableTop="@mipmap/ic_tab_my_red"
                android:gravity="center_horizontal"
                android:text="我的"
                android:textColor="@color/red" />
        </RadioGroup>

    </LinearLayout>

</mdzz.com.first_of_mdzz.widget.PagerEnabledSlidingPaneLayout>
